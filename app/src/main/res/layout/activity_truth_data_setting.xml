<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diesel.htweather.farming.TruthDataSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/truth_data_setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/truth_data_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView style="@style/BaseHorizontalLineWithShadow" />

    <LinearLayout
        android:id="@+id/save_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/BaseText.gray666_30px"
            android:drawableLeft="@drawable/icon_save"
            android:drawablePadding="@dimen/px12"
            android:gravity="center"
            android:text="@string/save_setting" />
    </LinearLayout>

</LinearLayout>
