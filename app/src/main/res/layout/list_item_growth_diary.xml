<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/px24">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_growth_diary"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px60"
            android:gravity="center_horizontal|bottom"
            android:text="农历"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_28px" />

        <TextView
            android:layout_width="@dimen/px160"
            android:layout_height="@dimen/px80"
            android:gravity="center"
            android:text="十月初七"
            android:textColor="@color/black_333"
            android:textSize="@dimen/font_32px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px10"
        android:paddingTop="@dimen/px10"
        android:paddingBottom="@dimen/px10"
        android:layout_height="@dimen/px140">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/font_38px"
            android:text="德丰e农崇州气象为农深度服务"
            android:textColor="@color/black_333" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_28px"
            android:text="2016-07-12"
            android:layout_alignParentBottom="true"
            android:textColor="@color/gray_666"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_28px"
            android:text="阅读 63"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray_666"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>