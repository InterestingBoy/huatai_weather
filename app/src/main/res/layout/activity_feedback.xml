<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diesel.htweather.user.FeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_height"
        android:background="@color/bg_top_header">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px30"
            android:src="@drawable/ic_left_white_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/feedback_advise"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_36px" />
    </RelativeLayout>

    <EditText
        android:id="@+id/advice_et"
        style="@style/BaseText.gray999_24px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400"
        android:background="@android:color/white"
        android:gravity="start"
        android:hint="@string/tips_some_advices_for_app"
        android:padding="@dimen/px24" />

    <Button
        android:id="@+id/commit_btn"
        style="@style/BaseText.white_30px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px70"
        android:layout_margin="@dimen/px24"
        android:background="@drawable/shape_green_bg_with_radius"
        android:gravity="center"
        android:text="@string/commit" />

</LinearLayout>
