<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/index_excise_bg" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f5912c">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add_city"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="11dp"
                android:text="崇州"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_36px" />

            <LinearLayout
                android:id="@+id/page_indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="11dp"
            android:src="@drawable/ic_message" />

        <TextView
            android:id="@+id/new_msg_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_message_cnt_bg"
            android:gravity="center"
            android:text="98"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_18px" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/weather_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>